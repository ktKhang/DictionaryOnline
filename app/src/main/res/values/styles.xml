<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blacktheme</item>
        <item name="colorPrimaryDark">@color/blacktheme2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeNavi" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bottomNav</item>
        <item name="colorPrimaryDark">@color/bottomNav</item>
        <item name="colorAccent">@color/bottomNav</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blacktheme</item>
        <item name="colorPrimaryDark">@color/blacktheme2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
